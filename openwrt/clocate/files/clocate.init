#!/bin/sh /etc/rc.common

START=50
USE_PROCD=1

NAME=clocated
PROG=/sbin/clocated

. /lib/functions.sh


service_triggers() {
	procd_add_reload_trigger clocated
}

start_service()
{
	ENABLED="$(uci -q get clocate.daemon.enabled)"
	ENABLED="${ENABLED:-1}"

	[ "$ENABLED" -gt 0 ] || return

	procd_open_instance
	procd_set_param command "$PROG"
	procd_close_instance
}
